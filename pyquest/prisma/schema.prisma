// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User model for authentication and progress tracking
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String    // Hashed password
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  accounts      Account[]
  sessions      Session[]
  progress      UserProgress[]
  achievements  Achievement[]
  questAttempts QuestAttempt[]
  worldProgress WorldProgress[]
}

// NextAuth Account model
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// NextAuth Session model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// NextAuth VerificationToken model
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Quest model for Python learning content
model Quest {
  id          String   @id @default(cuid())
  title       String
  description String
  difficulty  String   // 'beginner', 'intermediate', 'advanced'
  category    String   // 'basics', 'data-structures', 'algorithms', etc.
  order       Int
  xpReward    Int      @default(100)
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  challenges  Challenge[]
  progress    UserProgress[]
  
  @@index([category, order])
}

// Challenge model for individual coding exercises
model Challenge {
  id          String   @id @default(cuid())
  questId     String
  quest       Quest    @relation(fields: [questId], references: [id], onDelete: Cascade)
  title       String
  description String
  starterCode String   @db.Text
  solution    String   @db.Text
  testCases   String   @db.Text // JSON array of test cases
  hints       String?  @db.Text // JSON array of hints
  order       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([questId, order])
}

// User progress tracking
model UserProgress {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  questId     String
  quest       Quest    @relation(fields: [questId], references: [id], onDelete: Cascade)
  completed   Boolean  @default(false)
  score       Int      @default(0)
  attempts    Int      @default(0)
  lastAttempt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([userId, questId])
  @@index([userId])
}

// Achievement/Badge system
model Achievement {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  description String
  icon        String
  unlockedAt  DateTime @default(now())
  
  @@index([userId])
}

// Quest Attempt tracking (for JSON-based quests)
model QuestAttempt {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  questId      String   // References quest ID from JSON files
  status       String   // 'not_started', 'in_progress', 'completed', 'failed'
  lastCode     String?  @db.Text
  attemptsCount Int     @default(0)
  passed       Boolean  @default(false)
  xpEarned     Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@unique([userId, questId])
  @@index([userId])
  @@index([questId])
}

// World Progress tracking
model WorldProgress {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  worldId         String   // World identifier (e.g., 'python-basics', 'data-structures')
  questsCompleted Int      @default(0)
  totalQuests     Int      @default(0)
  xpEarned        Int      @default(0)
  isUnlocked      Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([userId, worldId])
  @@index([userId])
}
