// Production Prisma schema (PostgreSQL)
// This mirrors the local dev schema, but targets Postgres.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// User model for authentication and progress tracking
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  password      String    // Hashed password
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Game mechanics
  xp            Int       @default(0)
  level         Int       @default(1)
  currentStreak Int       @default(0)
  longestStreak Int       @default(0)
  lastLoginDate DateTime?
  
  accounts           Account[]
  sessions           Session[]
  progress           UserProgress[]
  oldAchievements    Achievement[]    @relation("OldAchievements")
  questAttempts      QuestAttempt[]
  worldProgress      WorldProgress[]
  userAchievements   UserAchievement[]
}

// NextAuth Account model
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// NextAuth Session model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// NextAuth VerificationToken model
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Quest model for Python learning content
model Quest {
  id          String   @id @default(cuid())
  title       String
  description String
  difficulty  String   // 'beginner', 'intermediate', 'advanced'
  category    String   // 'basics', 'data-structures', 'algorithms', etc.
  order       Int
  xpReward    Int      @default(100)
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  challenges  Challenge[]
  progress    UserProgress[]
  
  @@index([category, order])
}

// Challenge model for individual coding exercises
model Challenge {
  id          String   @id @default(cuid())
  questId     String
  quest       Quest    @relation(fields: [questId], references: [id], onDelete: Cascade)
  title       String
  description String
  starterCode String  
  solution    String  
  testCases   String   // JSON array of test cases
  hints       String?  // JSON array of hints
  order       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@index([questId, order])
}

// User progress tracking
model UserProgress {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  questId     String
  quest       Quest    @relation(fields: [questId], references: [id], onDelete: Cascade)
  completed   Boolean  @default(false)
  score       Int      @default(0)
  attempts    Int      @default(0)
  lastAttempt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@unique([userId, questId])
  @@index([userId])
}

// Old Achievement model (deprecated, kept for migration)
model Achievement {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(name: "OldAchievements", fields: [userId], references: [id], onDelete: Cascade)
  title       String
  description String
  icon        String
  unlockedAt  DateTime @default(now())
  
  @@index([userId])
}

// Achievement definition (system-wide)
model AchievementDefinition {
  id               String   @id @default(cuid())
  code             String   @unique // e.g., 'first_quest', 'streak_3', 'world_complete_python_basics'
  title            String
  description      String
  icon             String   // Emoji or icon identifier
  xpReward         Int      @default(50)
  category         String   // 'quest', 'streak', 'world', 'milestone'
  requirement      Int      @default(1) // Threshold value (e.g., 5 for '5 quests completed')
  secret           Boolean  @default(false) // Hidden until unlocked
  xpAwarded        Boolean  @default(false) // Track if XP has been awarded to prevent double-awarding
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  firstCompletedAt DateTime? // Track when first completed for daily streak
  userAchievements UserAchievement[]
  
  @@index([category])
}

// User's unlocked achievements
model UserAchievement {
  id            String                @id @default(cuid())
  userId        String
  user          User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievementId String
  achievement   AchievementDefinition @relation(fields: [achievementId], references: [id], onDelete: Cascade)
  unlockedAt    DateTime              @default(now())
  
  @@unique([userId, achievementId])
  @@index([userId])
  @@index([achievementId])
}

// Quest Attempt tracking (for JSON-based quests)
model QuestAttempt {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  questId      String   // References quest ID from JSON files
  status       String   // 'not_started', 'in_progress', 'completed', 'failed'
  lastCode     String? 
  attemptsCount Int     @default(0)
  hintTierUnlocked Int  @default(0)
  lastResult   Json?
  passed       Boolean  @default(false)
  xpEarned     Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  @@unique([userId, questId])
  @@index([userId])
  @@index([questId])
}

// World Progress tracking
model WorldProgress {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  worldId         String   // World identifier (e.g., 'python-basics', 'data-structures')
  questsCompleted Int      @default(0)
  totalQuests     Int      @default(0)
  xpEarned        Int      @default(0)
  isUnlocked      Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  @@unique([userId, worldId])
  @@index([userId])
}
